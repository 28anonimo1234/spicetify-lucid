{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "lib": ["DOM", "ES2020", "DOM.Iterable"],
    "jsx": "react",
    "paths": {
      "@app/*": ["./extension/*"],
      "@utils/*": ["./extension/utils/*"],
      "@components/*": ["./extension/components/*"],
      "@store/*": ["./extension/store/*"],
      "@core/*": ["./extension/core/*"],
      "@styles/*": ["./styles/*"],
      "@colors/*": ["./colors/*"]
    }
  }
}
